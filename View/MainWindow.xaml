<Window x:Class="ShoppingApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingApp.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Магазин" Command="{Binding ShowStoreViewCommand}" Margin="5"/>
            <Button Content="Корзина" Command="{Binding ShowCartViewCommand}" Margin="5"/>
        </StackPanel>

        <ContentControl Grid.Row="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>
</Window>
